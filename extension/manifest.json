{
    "name": "Era Notations",
    "version": "1.0.0",
    "manifest_version": 3,
    "description": "Make era notations always BCE/CE or always BC/AD",
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "constants.js",
                "patternsInHtml.js",
                "patternsInText.js",
                "helpers.js",
                "translation.js",
                "automaticTranslation.js",
                "patternProcessors.js",
                "summaryManager.js",
                "content.js"
            ],
            "css": [
                "styles.css"
            ]
        }
    ],
    
    "action": {
        "default_icon": "images/icon16.png",
        "default_popup": "popup.html"
    },
    "permissions":[
        "storage",
        "activeTab"
    ],
    "host_permissions": [
        "<all_urls>"
    ],
    "icons": {
        "16": "images/icon16.png",
        "32": "images/icon32.png",
        "48": "images/icon48.png",
        "128": "images/icon128.png"
    }
  
}